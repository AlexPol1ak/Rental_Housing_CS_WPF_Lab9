<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="GroupBox_Style" TargetType="GroupBox">
        <Setter Property="GroupBox.Margin" Value="5"/>
    </Style>

    <Style x:Key="GroupBoxHeaderTextStyle">
        <Setter Property="TextBlock.FontSize" Value="18"/>
        <Setter Property="TextBlock.FontFamily" Value="Century Schoolbook"/>
        <Setter Property="TextBlock.FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="ListView">
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <Style TargetType="ListViewItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="ListViewColumnHeaderTextstyle"
           BasedOn="{StaticResource GroupBoxHeaderTextStyle}">
        <Setter Property="TextBlock.FontSize" Value="12"/>
        <Setter Property="TextBlock.FontStyle" Value="Italic"/>

    </Style>

</ResourceDictionary>